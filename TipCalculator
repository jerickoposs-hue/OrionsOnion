#!/usr/bin/env python3
"""
Tip Calculator
A simple script to calculate tips and split bills among people
"""

def calculate_tip(bill_amount, tip_percentage, num_people=1):
    """
    Calculate tip and total amount per person
    
    Args:
        bill_amount: The total bill before tip
        tip_percentage: Tip percentage (e.g., 15, 18, 20)
        num_people: Number of people splitting the bill (default: 1)
    
    Returns:
        Dictionary with tip amount, total, and per person amounts
    """
    tip_amount = bill_amount * (tip_percentage / 100)
    total_amount = bill_amount + tip_amount
    amount_per_person = total_amount / num_people
    tip_per_person = tip_amount / num_people
    
    return {
        'bill': bill_amount,
        'tip_amount': tip_amount,
        'total': total_amount,
        'num_people': num_people,
        'per_person': amount_per_person,
        'tip_per_person': tip_per_person
    }


def main():
    """Main function to run the tip calculator"""
    print("=" * 40)
    print("       TIP CALCULATOR")
    print("=" * 40)
    
    try:
        # Get bill amount
        bill = float(input("\nEnter the bill amount: $"))
        34.16
        # Get tip percentage
        tip_pct = float(input("Enter tip percentage (e.g., 15, 18, 20): "))
        
        # Get number of people
        people = int(input("Number of people splitting the bill: "))
        
        if bill <= 0 or tip_pct < 0 or people <= 0:
            print("\nError: Please enter valid positive numbers!")
            return
        
        # Calculate
        result = calculate_tip(bill, tip_pct, people)
        
        # Display results
        print("\n" + "=" * 40)
        print("RESULTS:")
        print("=" * 40)
        print(f"Bill Amount:        ${result['bill']:.2f}")
        print(f"Tip ({tip_pct}%):         ${result['tip_amount']:.2f}")
        print(f"Total Amount:       ${result['total']:.2f}")
        print("-" * 40)
        print(f"Number of People:   {result['num_people']}")
        print(f"Per Person (Total): ${result['per_person']:.2f}")
        print(f"Per Person (Tip):   ${result['tip_per_person']:.2f}")
        print("=" * 40)
        
    except ValueError:
        print("\nError: Please enter valid numbers!")
    except Exception as e:
        print(f"\nAn error occurred: {e}")


if __name__ == "__main__":
    main()